@import "values.styl"

.control-panel
  display flex
  justify-content space-between
  height 50px
  color $color.gray_one
  border-top 1px solid $color.grayish_three
  box-sizing border-box
  font-size $font_size.small

.control-panel__item
  padding 0px 15px 0px 15px
  align-self center

.item-clear
  border none
  background-color $background_color.item
  font-size $font_size.small
  color $color.gray_one
  font-family $font_family