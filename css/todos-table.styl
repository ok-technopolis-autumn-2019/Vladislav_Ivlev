.todos-table
  display flex
  flex-flow column
  justify-content space-between
  width 570px
  min-height 400px
  background-color white
  position relative
  box-shadow 0px 2px 5px rgba(0, 0, 0, 0.25)
  &::before
    height 5px
    width calc(100% - 4px)
    background-color white
    position absolute
    top 100%
    left 3px
    box-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
    z-index -1
    content ""
  &::after
    height 10px
    width calc(100% - 8px)
    background-color white
    position absolute
    top 100%
    left 6px
    box-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
    z-index -2
    content ""