@import "values.styl"

.todos-table__head
  display flex
  min-height 60px
  box-shadow inset 0px -1px 0px $color.grayish_three

.table-head__select-all
  width 60px
  border 0px
  background-color transparent
  background-image url(../icons/select.svg)
  background-position center
  box-sizing border-box
  background-repeat no-repeat
  font-size 0px

.table-head__create-new
  display flex
  height 57px
  flex-grow 1

.table-head__create-new-input
  height 100%
  flex-grow 1
  border 0px
  font-size $font_size.normal
  color $color.gray_two
  font-family $font_family
  &::placeholder
    font-style italic
    font-size $font_size.normal
    color $color.grayish_four