html,
body
  display flex
  flex-flow column
  align-items center
  background-color rgba(0, 0, 0, 0.0015)
  color #CCCCCC
  font-family "Roboto", sans-serif

.main-todo-app
  font-size 120px

.control-panel
  display flex
  justify-content space-between
  height 50px
  color #888888
  border-top 1px solid #E6E6E6
  box-sizing border-box
  font-size 14px

.control-panel__item
  padding 0px 15px 0px 15px
  align-self center

.item-clear
  border none
  background-color white
  font-size 14px
  color #888888
  font-family "Roboto", sans-serif

.item-filter
  display flex

.item-filter__input
  position absolute
  left -9999px
  &:checked
    & + .item-filter__text
      border-color #E6E6E6

.item-filter__text
  padding 5px
  border 1px solid
  border-radius 2px
  border-color transparent

.todos-table__head
  display flex
  min-height 60px
  box-shadow inset 0px -1px 0px #E6E6E6

.table-head__select-all
  width 60px
  border 0px
  background-color transparent
  background-image url(../icons/select.svg)
  background-position center
  box-sizing border-box
  background-repeat no-repeat
  font-size 0px

.table-head__create-new
  display flex
  height 57px
  flex-grow 1

.table-head__create-new-input
  height 100%
  flex-grow 1
  border 0px
  font-size 24px
  color #666666
  font-family "Roboto", sans-serif
  &::placeholder
    font-style italic
    font-size 24px
    color #CCCCCC

.todos-table__item
  display flex
  align-items center
  min-height 60px
  border-bottom 1px solid #E6E6E6
  box-sizing border-box
  font-size 24px
  color #666666

.todos-table__item:focus-within, .todos-table__item:hover
  background #FAFAFA

.table-item__view
  display flex
  align-items center
  padding-left 10px
  padding-right 10px

.table-item__check
  flex-shrink 0
  width 45px
  height 45px
  background-color white
  border 1px solid #CCCCCC
  border-radius 50%
  box-sizing border-box
  flex-shrink 0

.table-item__checkbox
  position absolute
  left -9999px
  &:checked
    & + .table-item__check
      border-color #5DC2AF
      background-image url(../icons/check.svg)
      background-repeat no-repeat
      background-position center
    & ~ .table-item__text
      color #CCCCCC
      text-decoration-line line-through
  &:focus
    & + .table-item__check
      border-width 2px

.table-item__text
  width 440px
  height 100%
  padding 10px

.table-item__delete
  flex-shrink 0
  width 20px
  height 20px
  margin 20px
  background-color transparent
  background-image url(../icons/del.svg)
  background-position right
  box-sizing border-box
  background-repeat no-repeat
  border 0
  font-size 0
  opacity 0

.table-item:hover .table-item__delete, .table-item__delete:focus
  opacity 1

.todos-table__items
  flex-grow 1

.items
  padding 0
  margin 0
  word-wrap break-word

.todos-table
  display flex
  flex-flow column
  justify-content space-between
  width 570px
  min-height 400px
  background-color white
  position relative
  box-shadow 0px 2px 5px rgba(0, 0, 0, 0.25)
  &::before
    height 5px
    width calc(100% - 4px)
    background-color white
    position absolute
    top 100%
    left 3px
    box-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
    z-index -1
    content ""
  &::after
    height 10px
    width calc(100% - 8px)
    background-color white
    position absolute
    top 100%
    left 6px
    box-shadow 0px 2px 2px rgba(0, 0, 0, 0.25)
    z-index -2
    content ""