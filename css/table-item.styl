@import "values.styl"
@import "functions.styl"

.todos-table__item
  display flex
  align-items center
  min-height 60px
  border-bottom 1px solid color.grayish_three
  box-sizing border-box
  font-size font_size.normal
  color color.gray_two

.todos-table__item:focus-within, .todos-table__item:hover
  background background_color.item_hover

.table-item__view
  display flex
  align-items center
  padding-left 10px
  padding-right 10px

.table-item__check
  flex-shrink 0
  width 45px
  height 45px
  background-color background_color.item
  border 1px solid color.grayish_four
  border-radius 50%
  box-sizing border-box
  flex-shrink 0

.table-item__checkbox
  hide_block();
  &:checked
    & + .table-item__check
      border-color border_color.checkbox
      background-image url(../icons/check.svg)
      background-repeat no-repeat
      background-position center
    & ~ .table-item__text
      color color.grayish_four
      text-decoration-line line-through
  &:focus
    & + .table-item__check
      border-width 2px

.table-item__text
  width 440px
  height 100%
  padding 10px

.table-item__delete
  flex-shrink 0
  width 20px
  height 20px
  margin 20px
  background-color transparent
  background-image url(../icons/del.svg)
  background-position right
  box-sizing border-box
  background-repeat no-repeat
  border 0
  font-size 0
  opacity 0

.table-item:hover .table-item__delete, .table-item__delete:focus
  opacity 1